<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="LaboratorioTiaraju.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <Color x:Key="White">#FFFFFF</Color>
        <Color x:Key="OrangeRed">#ff4500</Color>
        <Color x:Key="LightGray">#d3d3d3</Color>
        <Color x:Key="Black">#000000</Color>
        <Color x:Key="GreenLabel">#006600</Color>

        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="MontserratBold" />
            <Setter Property="BackgroundColor" Value="{StaticResource OrangeRed}" />
            <Setter Property="TextColor" Value="{StaticResource White}" />
        </Style>
    </Application.Resources>
</Application>